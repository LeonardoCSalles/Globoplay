            <ImageView
                android:id="@+id/barbie"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@tools:sample/avatars"
                app:srcCompat="@drawable/barbie" />
        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
