<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".filmes">

    <ImageView
        android:id="@+id/imgfilme"
        android:layout_width="257dp"
        android:layout_height="306dp"
        app:srcCompat="@drawable/gossip"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="48dp" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GOSSIP GIRL"
        android:textColor="#FAF1F1"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="398dp" />

    <TextView
        android:id="@+id/enredo"
        android:layout_width="357dp"
        android:layout_height="134dp"
        android:text="Manhattan... uma escola de adolescentes ricos, com poucas coisas verdadeiramente importantes das quais se ocupar e todo o tempo do mundo para explorar as tentações da cidade. O ambiente perfeito para o império da intriga... a série conta a vida de um grupo de jovens milionários através dos olhos de uma blogger, que sabe tudo o que acontece nas suas vidas, mas que ninguém sabe quem é."
        android:textColor="#E8DDDD"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="460dp" />
</androidx.constraintlayout.widget.ConstraintLayout>